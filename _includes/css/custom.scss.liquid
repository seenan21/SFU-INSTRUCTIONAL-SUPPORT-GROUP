.side-bar {
  z-index: 0;
  display: flex;
  flex-wrap: wrap;
  background-color: $sidebar-color;

  @include mq(md) {
    flex-wrap: nowrap;
    position: fixed;
    width: $nav-width-md;
    height: 100%;
    flex-direction: column;
    border-right: $border $border-color;
    align-items: flex-end;
  }

  @include mq(lg) {
    width: $nav-width;
    min-width: $nav-width;
  }
}
.main {
  @include mq(md) {
    position: relative;
    max-width: $content-width;
    margin-left: $nav-width;
  }

  @include mq(lg) {
    margin-left: $nav-width;
  }
}
nav-list {
  padding: 0;
  margin-top: 0;
  margin-bottom: 0;
  list-style: none;

  .nav-list-item {
    @include fs-5;
    position: relative;
    margin: 0;

    @include mq(md) {
      @include fs-5;
    }
}
